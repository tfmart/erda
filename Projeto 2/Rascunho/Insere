#include<stdio.h>
#include<stdlib.h>
#include<string.h>


struct no {
    char chave[20], palavra[20];
    struct no *dir, *esq;
};


typedef struct no celula;


int insere(celula **raiz, char palavra[]) {
    celula *aux=(*raiz);
    
    if ((*raiz) == NULL)
        
    {
        (*raiz) = (celula *)malloc(sizeof(celula));
        strcpy((*raiz)->chave, palavra);
        (*raiz)->esq = NULL;
        (*raiz)->dir = NULL;
        return 1;
    }
    
    else if (strcmp((*raiz)->chave, palavra) == 0){
        return 0;
    }
    
    
    else if (strcmp(palavra, (*raiz)->chave) > 0){ 

        return(insere(&(*raiz)->dir, palavra));
    }
    
    
    else if (strcmp(palavra, (*raiz)->chave) < 0){
        return (insere(&(*raiz)->esq, palavra));
    }
    
}


int main() {
    
    celula *lista = NULL;
    int op, resposta;
    char palavra[20];
    
    do {
        system("cls");
        printf("0- Sair\n");
        printf("1- Inserir\n");
        printf("->");
        scanf("%d", &op);
        switch (op)
        {
            case 1:
                
                getchar();
                scanf("%s",palavra);
                resposta = insere(&lista, palavra);
                printf("%d\n", resposta);
                
             
                
                system("pause");
                break;
        }
        
        
    } while (op != 0);

    return 0;
}
